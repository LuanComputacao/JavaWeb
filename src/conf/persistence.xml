<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="TrabalhoJavaWebPU" transaction-type="JTA">
    <jta-data-source>java:app/SistemaDePedidosJNDI</jta-data-source>
    <class>org.ufpr.sistemapedidos.model.Cliente</class>
    <class>org.ufpr.sistemapedidos.model.ItemDoPedido</class>
    <class>org.ufpr.sistemapedidos.model.Pedido</class>
    <class>org.ufpr.sistemapedidos.model.Produto</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
